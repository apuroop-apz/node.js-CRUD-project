<% include ../partials/header %>

<% include ../partials/navbar %>
<div class="= border myOwnDiv">
    <div class="col s12">
        <% if (items.length > 0) { %>
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Make</th>
                        <th>Title</th>
                        <th>Type</th>
                        <th>Body Type</th>
                        <th>Year</th>
                        <th>Mileage</th>
                        <th>Price</th>
                        <th>Transmission</th>
                        <th style="text-align:center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% items.forEach(function(item, index){ %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= item.make %></td>
                        <td><%= item.title %></td>
                        <td><%= item.type %></td>
                        <td><%= item.bodytype %></td>
                        <td><%= item.year %></td>
                        <td><%= item.mileage %></td>
                        <td><%= item.price %></td>
                        <td><%= item.transmission %></td>                        
                        <td style="text-align:center">
                            <a href="/usedcars/<%= item.id %>" class="btn btn-success">View Details</a>
                        </td>
                    </tr>
                <% }); %>
                </tbody>
            </table>
        <% }else{ %>
            <p class="alert">There are no records available.</p>
        <% } %>
    </div>
</div>
<% include ../partials/footer %>